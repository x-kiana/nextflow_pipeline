process {
   withName:FASTQTOSAM {
        conda = 'GenomeAnalysis.yml'
	publishDir = 'results'
	cpus = 8
	memory = 64G 
   }
   withName:SAMTOBAM {
        conda = 'GenomeAnalysis.yml'
	publishDir = 'results'
	cpus = 8
   }
   withName:SORTEDBAM {
        conda = 'GenomeAnalysis.yml'
	publishDir = 'results'
   }
   withName:INDEXEDBAM {
        conda = 'GenomeAnalysis.yml'
	publishDir = 'results'
   } 
   withName:DEEPVARIANT {
        conda = 'GenomeAnalysis.yml'
        container = '/mnt/common/Precision/DeepVariant/deepvariant_1.2.0.sif'
	publishDir = 'results'
    }
}
conda {
    enabled = true
}
singularity {
    enabled = true
    autoMounts = true
    runOptions = "-e -B '/mnt/common/DATABASES/REFERENCES/GRCh38/GENOME' -B '/mnt/common/Precision/DeepVariant/deepvariant_1.2.0.sif' -B '/mnt/scratch/Public/TRAINING/GenomeAnalysisModule/StudentSpaces/KianaRashidi'"

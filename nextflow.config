profiles {
   gpcc {
      process.executer = 'slurm'
      process.queue = 'defq'
      dag.overwrite = true
   }
   sockeye {
   }
}

params {
    wd = "/mnt/scratch/Public/TRAINING/GenomeAnalysisModule/StudentSpaces/KianaRashidi"
    referenceDir = "/mnt/common/DATABASES/REFERENCES/GRCh38/GENOME/GRCh38-lite.fa"
    sampleID = "Proband_nf"
    refgenome = '/mnt/common/DATABASES/REFERENCES/GRCh38/GENOME/GRCh38-lite.fa'
    r1 = 'Proband_R1.fastq'
    r2 = 'Proband_R2.fastq'
    sampleBam = 'Proband_nf.sorted.bam'
    regions = "19:1,200,000-1,300,000"
    exomiser = 'exomiser-cli-13.1.0.jar'
